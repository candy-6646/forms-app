    <title>Forms</title>
  </head>
  <body>

    <div class="row form-container <%=form.color%>">
        <div class="col-lg-8 col-sm-12">
            <div class="form-resp-card <%=form.color%>-border">
                <div class="form-resp-card-item form-resp-card-title">
                    <%=form.title%>
                </div>
                <div class="form-resp-card-item form-resp-card-desc">
                    <%=form.description%>
                </div>
            </div>

            <form action="/<%=userId%>/<%=form._id%>" method="POST">
            
                <%  allQuestions.forEach(function(question){ %>

                    <% if (question.type === "email") { %>
                        <div class="form-resp-card" id="<%=question._id%>" >
                            <div class="form-resp-card-item form-resp-card-question"><%=question.question%></div>
                            <div class="form-resp-card-item form-resp-card-option">
                                <input type="email" class="form-control" name="email" placeholder="Email" autocomplete="off" required>
                            </div>
                            <span class="required-ques-text-resp">*</span>
                        </div>
                    
                    <% } else if (question.type === "name") { %>
                        <div class="form-resp-card" id="<%=question._id%>" >
                            <div class="form-resp-card-item form-resp-card-question"><%=question.question%></div>
                            <div class="form-resp-card-item form-resp-card-option">
                                <input type="text" class="form-control" name="name" placeholder="Name" autocomplete="off" required>
                            </div>
                            <span class="required-ques-text-resp">*</span>
                        </div>
                    <% } else if(question.type === "text") { %>
                        <div class="form-resp-card" id="<%=question._id%>" >
                            <div class="form-resp-card-item form-resp-card-question"><%=question.question%></div>
                            <div class="form-resp-card-item form-resp-card-option">
                                <textarea style="height: 70px;" type="text" class="form-control" name="<%=question.question%>" placeholder="Short answer text...."></textarea>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="form-resp-card" id="<%=question._id%>" >
                            <div class="form-resp-card-item form-resp-card-question"><%=question.question%></div>
                            <div class="form-resp-card-item form-resp-card-option">
                                <% for(let i = 0; i < question.options.length; i++) { %>
                                    <div class="form-option-resp" id="form-option<%=i%>">
                                        <span class="material-icons custom-checkbtn unchecked">radio_button_checked</span>
                                        <div class="form-option-resp-question"><%=question.options[i]%></div>
                                    </div>
                                <% } %>
                                <input class="user-selected-answer" name="<%=question.question%>" style="display: none;" />
                            </div>
                        </div>
                    <% } %>

                <%  }) %>
                <button class="btn btn-lg <%=form.color%>-btn" type="submit">Submit</button>
            </form>
        </div>
        <footer id="footer" class="white-section">
            Â© Copyright 2022 Kundan Kumar
        </footer>
    </div>


