    <title>Forms</title>
  </head>
  <body>


    <% if(form.public === "on") { %>
        <div class="row form-container <%=form.color%> form-off-container">
            <div class="col-lg-8 col-sm-12">
                <div class="form-resp-card <%=form.color%>-border">
                    <div class="form-resp-card-item form-resp-card-title">
                        <%=form.title%>
                    </div>
                </div>
                <div class="form-resp-card">
                    <div class="form-resp-card-item form-resp-card-title">
                        Thank You <span class="material-icons custom-tick">task_alt</span>
                    </div>
                    <div class="form-resp-card-item form-resp-card-desc">
                        Your Response is submitted successfully.
                    </div>
                </div>
            </div>
            <footer id="footer" class="white-section">
                © Copyright 2022 Kundan Kumar
            </footer>
        </div>

    <% }else { %>
        <div class="row form-container <%=form.color%> form-off-container">
            <div class="col-lg-8 col-sm-12">
                <div class="form-resp-card <%=form.color%>-border">
                    <div class="form-resp-card-item form-resp-card-title">
                        <%=form.title%>
                    </div>
                </div>
                <div class="form-resp-card">
                    <div class="form-resp-card-item form-resp-card-title">
                        The form is no longer accepting responses <span class="material-icons custom-alert">error_outlined</span>
                    </div>
                    <div class="form-resp-card-item form-resp-card-desc">
                        Try contacting the owner of the form if you think this is a mistake.
                    </div>
                </div>
            </div>
            <footer id="footer" class="white-section">
                © Copyright 2022 Kundan Kumar
            </footer>
        </div>
    <% } %>


<%- include('partials/footer') %>